.container {
  min-height: 100vh;
  background-color: #f6f7f9;
  padding-bottom: 120rpx;
}

/* 顶部搜索栏 */
.search-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.search-bar {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f6f7f9;
  border-radius: 36rpx;
  padding: 16rpx 24rpx;
  margin-right: 20rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.header-right {
  width: 60rpx;
  height: 60rpx;
}

.menu-icon {
  width: 100%;
  height: 100%;
}

/* 功能导航 */
.nav-section {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 20rpx;
  background: linear-gradient(to bottom, #ffffff, #f8f9fa);
  margin-top: 100rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  transition: all 0.3s;
  padding: 10rpx;
}

.nav-item:active {
  transform: scale(0.95);
}

.nav-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 50%;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  margin-bottom: 12rpx;
}

.nav-icon image {
  width: 48rpx;
  height: 48rpx;
}

.nav-item:active .nav-icon {
  background-color: #fff0f3;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255,107,129,0.2);
}

.nav-item text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* 私享定制分类 */
.custom-section {
  background-color: #fff;
  padding: 30rpx 20rpx;
  border-radius: 20rpx;
  margin: 0 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.more-text {
  font-size: 24rpx;
  color: #999;
}

/* 分类标签 */
.category-scroll {
  margin: 20rpx 0;
  white-space: nowrap;
  padding: 0 20rpx;
}

.category-list {
  display: inline-block;
}

.category-item {
  display: inline-block;
  padding: 12rpx 32rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #f6f7f9;
  border-radius: 32rpx;
  transition: all 0.3s;
}

.category-item.active {
  color: #fff;
  background-color: #ff6b81;
}

/* 动漫列表 */
.anime-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx;
}

.anime-card {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.anime-cover {
  width: 100%;
  height: 240rpx;
  position: relative;
}

.anime-tag {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background-color: rgba(255, 107, 129, 0.9);
  color: #fff;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.anime-info {
  padding: 16rpx;
}

.anime-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.anime-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.category-tag {
  font-size: 22rpx;
  color: #666;
  background-color: #f6f7f9;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.follow-count {
  font-size: 22rpx;
  color: #ff6b81;
}

.member-tag {
  display: inline-block;
  font-size: 22rpx;
  color: #ff6b81;
  border: 1rpx solid #ff6b81;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
}

/* 底部导航 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 100rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  padding-bottom: env(safe-area-inset-bottom);
}

.nav-tab {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-tab image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 6rpx;
}

.nav-tab text {
  font-size: 22rpx;
  color: #999;
}

.nav-tab.active text {
  color: #ff6b81;
}

/* 加载动画 */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 数据分析部分 */
.data-analysis {
  background: #fff;
  border-radius: 20rpx;
  margin: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
}

.data-header {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

/* 数据卡片 */
.data-cards {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
}

.data-card {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  position: relative;
}

.data-card:not(:last-child):after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  height: 60%;
  width: 2rpx;
  background: #eee;
}

.card-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.unit {
  font-size: 24rpx;
  margin-left: 4rpx;
  color: #666;
}

.card-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.card-trend {
  font-size: 22rpx;
  color: #ff6b81;
  background: rgba(255,107,129,0.1);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  display: inline-block;
}

/* 数据区块 */
.data-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

/* 进度条列表 */
.progress-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.progress-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.type {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.value {
  font-size: 24rpx;
  color: #ff6b81;
  font-weight: bold;
}

.progress-bar {
  height: 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  background: linear-gradient(to right, #ff6b81, #ff8e9c);
  border-radius: 8rpx;
  transition: width 0.6s ease;
}

/* 时段分布 */
.time-slots {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 300rpx;
  padding: 20rpx 0;
  margin-top: 30rpx;
}

.time-slot {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.slot-value {
  font-size: 22rpx;
  color: #ff6b81;
  margin-bottom: 8rpx;
  font-weight: bold;
}

.slot-bar {
  width: 24rpx;
  background: linear-gradient(to top, #ff6b81, #ff8e9c);
  border-radius: 12rpx;
  transition: height 0.6s ease;
  min-height: 8rpx;
}

.slot-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 12rpx;
}

/* 添加动画效果 */
@keyframes slideUp {
  from {
    transform: translateY(20rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.data-section {
  animation: slideUp 0.6s ease forwards;
}

.progress-inner, .slot-bar {
  animation: slideUp 0.8s ease forwards;
} 