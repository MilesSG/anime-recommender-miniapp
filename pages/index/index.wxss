.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 搜索栏样式 */
.search-bar {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.search-input {
  background-color: #f5f5f5;
  padding: 16rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

/* 分类标签样式 */
.category-bar {
  display: flex;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
}

.category-item {
  padding: 10rpx 30rpx;
  margin: 0 10rpx;
  font-size: 28rpx;
  border-radius: 30rpx;
  background-color: #f5f5f5;
  color: #666;
}

.category-item.active {
  background-color: #ff6b81;
  color: #fff;
}

/* 动漫列表样式 */
.anime-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.anime-card {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.anime-cover {
  width: 100%;
  height: 250rpx;
  object-fit: cover;
}

.anime-info {
  padding: 16rpx;
}

.anime-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.anime-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
}

.anime-score {
  color: #ff6b81;
  font-weight: bold;
}

.anime-status {
  color: #666;
  background-color: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
} 