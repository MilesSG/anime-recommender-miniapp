.container {
  min-height: 100vh;
  background-color: #f6f7f9;
  padding-bottom: 120rpx;
}

/* 顶部搜索栏 */
.search-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.search-bar {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f6f7f9;
  border-radius: 36rpx;
  padding: 16rpx 24rpx;
  margin-right: 20rpx;
}

.search-bar icon {
  margin-right: 12rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.header-right {
  width: 60rpx;
  height: 60rpx;
}

.menu-icon {
  width: 100%;
  height: 100%;
}

/* 功能导航 */
.nav-section {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 20rpx;
  background: linear-gradient(to bottom, #ffffff, #f8f9fa);
  margin-top: 100rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  transition: all 0.3s;
  padding: 10rpx;
}

.nav-item:active {
  transform: scale(0.95);
}

.nav-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 50%;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  margin-bottom: 12rpx;
}

.nav-item:active .nav-icon {
  background-color: #fff0f3;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255,107,129,0.2);
}

.nav-item text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* 私享定制分类 */
.custom-section {
  background-color: #fff;
  padding: 30rpx 20rpx;
  border-radius: 20rpx;
  margin: 0 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.more-text {
  font-size: 24rpx;
  color: #999;
}

/* 分类标签 */
.category-scroll {
  margin: 20rpx 0;
  white-space: nowrap;
}

.category-list {
  display: inline-block;
  padding: 0 10rpx;
}

.category-item {
  display: inline-block;
  padding: 12rpx 32rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #f6f7f9;
  border-radius: 32rpx;
  transition: all 0.3s;
}

.category-item.active {
  color: #fff;
  background-color: #ff6b81;
}

/* 动漫列表 */
.anime-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx 0;
}

.anime-card {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
}

.anime-cover {
  width: 100%;
  height: 240rpx;
  position: relative;
}

.anime-tag {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background-color: rgba(255, 107, 129, 0.9);
  color: #fff;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.anime-info {
  padding: 16rpx;
}

.anime-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.anime-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.category-tag {
  font-size: 22rpx;
  color: #666;
  background-color: #f6f7f9;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.follow-count {
  font-size: 22rpx;
  color: #ff6b81;
}

.member-tag {
  display: inline-block;
  font-size: 22rpx;
  color: #ff6b81;
  border: 1rpx solid #ff6b81;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
}

/* 底部导航 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 100rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  padding-bottom: env(safe-area-inset-bottom);
}

.nav-tab {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-tab image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 6rpx;
}

.nav-tab text {
  font-size: 22rpx;
  color: #999;
}

.nav-tab.active text {
  color: #ff6b81;
}

/* 加载动画 */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 