/* pages/trends/index.wxss */
.trends-container {
  padding: 30rpx;
  background: #f8f9fa;
  min-height: 100vh;
}

.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.trend-cards {
  margin-bottom: 30rpx;
}

.trend-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.trend-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.anime-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.anime-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.anime-cover {
  width: 120rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

.anime-info {
  flex: 1;
}

.anime-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.trend-value {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.trend-value.up {
  color: #ff6b81;
  background: rgba(255, 107, 129, 0.1);
}

.chart-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.chart-container {
  height: 500rpx;
  width: 100%;
}

.ranking-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.ranking-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.ranking-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.rank-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b81;
  width: 60rpx;
  text-align: center;
}

.watch-count {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.trend-tag {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.trend-tag.up {
  color: #ff6b81;
  background: rgba(255, 107, 129, 0.1);
}

.trend-tag.down {
  color: #20bf6b;
  background: rgba(32, 191, 107, 0.1);
}