/* pages/recommend/index.wxss */
.recommend-container {
  padding: 30rpx;
  background: #f8f9fa;
  min-height: 100vh;
}

.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.preference-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.preference-chart {
  height: 400rpx;
  width: 100%;
}

.recommend-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.recommend-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.recommend-item {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.anime-cover {
  width: 160rpx;
  height: 220rpx;
  border-radius: 8rpx;
}

.anime-info {
  flex: 1;
}

.anime-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.anime-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 10rpx;
}

.match-rate {
  font-size: 24rpx;
  color: #ff6b81;
  background: rgba(255, 107, 129, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.category {
  font-size: 24rpx;
  color: #666;
}

.reason {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.category-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.category-scroll {
  margin: 20rpx 0;
  white-space: nowrap;
}

.category-list {
  display: inline-block;
  padding: 0 10rpx;
}

.category-item {
  display: inline-block;
  padding: 12rpx 32rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #f6f7f9;
  border-radius: 32rpx;
  transition: all 0.3s;
}

.category-item.active {
  color: #fff;
  background-color: #ff6b81;
}

.category-count {
  font-size: 22rpx;
  margin-left: 8rpx;
  opacity: 0.8;
}

.anime-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx 0;
}

.anime-card {
  background: #f8f9fa;
  border-radius: 12rpx;
  overflow: hidden;
}

.anime-card .anime-cover {
  width: 100%;
  height: 240rpx;
}

.anime-card .anime-info {
  padding: 16rpx;
}

.anime-card .anime-title {
  font-size: 26rpx;
  margin-bottom: 8rpx;
}

.anime-score {
  font-size: 24rpx;
  color: #ff6b81;
}