.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 用户信息区域 */
.user-info-section {
  background-color: #fff;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #999;
}

.login-btn {
  text-align: center;
  padding: 30rpx;
  font-size: 32rpx;
  color: #ff6b81;
}

/* 功能区域 */
.feature-section {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx 0;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.feature-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.feature-text {
  font-size: 26rpx;
  color: #333;
}

.count {
  position: absolute;
  top: -10rpx;
  right: 50rpx;
  background-color: #ff6b81;
  color: #fff;
  font-size: 22rpx;
  padding: 2rpx 12rpx;
  border-radius: 20rpx;
  min-width: 28rpx;
  text-align: center;
}

/* 列表区域 */
.list-section {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.list-item:last-child {
  border-bottom: none;
}

.item-text {
  font-size: 30rpx;
  color: #333;
}

.arrow {
  color: #999;
  font-size: 30rpx;
}

/* 版本信息 */
.version-info {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 30rpx 0;
} 